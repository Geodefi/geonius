{
  "editor.tabSize": 4,
  "python.analysis.typeCheckingMode": "off",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports.isort": "explicit"
  },
  },
  "esbonio.sphinx.confDir": "${workspaceFolder}/docs",
  "restructuredtext.preview.doubleClickToSwitchToEditor": false,
  "restructuredtext.preview.name": "sphinx",
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "support.type.property-name.table",
                "settings": {
                    "foreground": "#4EC9B0",
                },
            },
            {
                "scope": "support.type.property-name.array",
                "settings": {
                    "foreground": "#569CD6",
                }
            },
            {
                "scope": "support.type.property-name.array",
                "settings": {
                    "foreground": "#569CD6",
                }
            },
            {
                "scope": "constant.other.time",
                "settings": {
                    "foreground": "#DCDCAA",
                }
            }
        ]
    },
}
